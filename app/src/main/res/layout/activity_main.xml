<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/app_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/build_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEBUG BUILD" />

        <LinearLayout
            android:id="@+id/dbg_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            >
        <Button
            android:id="@+id/manage_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage WebDAV Server"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WebDAV Server controls and related permissions are included only in the Debug build."
            />
        <View
            android:layout_width="0dp"
            android:layout_height="16dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actual app controls, needed both in debug and release builds, go here..."
        />

</LinearLayout>